{
    "name": "letamanoir/hermes",
    "description": "Typed RPC for communicating between a PHP backend and TS frontend",
    "keywords": [
        "Hermes"
    ],
    "homepage": "https://github.com/LeTamanoir/Hermes",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Saldinger",
            "email": "martin.saldinger@gmail.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../Typographos",
            "options": {
                "symlink": true
            }
        }
    ],
    "require": {
        "php": "^8.4",
        "letamanoir/typographos": "0.0.1"
    },
    "require-dev": {
        "laravel/pint": "^1.24",
        "pestphp/pest": "^3.8",
        "symfony/var-dumper": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Hermes\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hermes\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}